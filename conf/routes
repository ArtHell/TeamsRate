# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# REST
GET     /users                           controllers.UserController.getAll
GET     /users/:id                       controllers.UserController.get(id: Long)
POST    /users                           controllers.UserController.add
PUT     /users/:id                       controllers.UserController.update(id: Long)
DELETE  /users/:id                       controllers.UserController.delete(id: Long)

GET     /teams                           controllers.TeamController.getAll
GET     /teams/:id                       controllers.TeamController.get(id: Long)
POST    /teams                           controllers.TeamController.add
PUT     /teams/:id                       controllers.TeamController.update(id: Long)
DELETE  /teams/:id                       controllers.TeamController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)